    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/vue.js"></script>
    <link rel="stylesheet" href="~/Content/ElementUI/element-ui.css" />
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <style>
        .el-row {
            margin-bottom: 20px;
            &:last-child

        {
            margin-bottom: 0;
        }

        }

        .el-col {
            border-radius: 4px;
        }

        .bg-purple-dark {
            background: #99a9bf;
        }

        .bg-purple {
            background: #d3dce6;
        }

        .bg-purple-light {
            background: #e5e9f2;
        }

        .grid-content {
            border-radius: 4px;
            min-height: 36px;
        }

        .row-bg {
            padding: 10px 0;
            background-color: #f9fafc;
        }

        .md_headpic {
            border: none;
            vertical-align: middle;
            margin-left: 10px;
        }

        .block2 {
            text-align: center;
        }

        .juzhong {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div id="head">

        <el-row class="demo-avatar demo-basic">
            <el-col :span="24">
                <div class="demo-basic--circle">
                    <div class="block2"><el-avatar class="md_headpic" :size="50" :src="circleUrl"></el-avatar></div>

                </div>
            </el-col>

        </el-row>

    </div>
    <div id="app">
        <el-container>
            <el-main>
                @*<el-row class="demo-avatar demo-basic">
